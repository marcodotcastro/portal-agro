<section class="section contact-section" id="next">
  <div class="container">
    <div class="row">
      <div class="col-md-7" data-aos="fade-up" data-aos-delay="100">

        <%= form_with(model: @contato, local: true, :html => {:class => "bg-white p-md-5 p-4 mb-5 border"}) do |form| %>
          <div class="row">
            <div class="col-md-6 form-group">
              <%= form.label :nome %>
              <%= form.text_field :nome, class: "form-control" %>
            </div>
            <div class="col-md-6 form-group">
              <%= form.label :telefone %>
              <%= form.text_field :telefone, class: "form-control" %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12 form-group">
              <%= form.label :email %>
              <%= form.text_field :email, class: "form-control" %>
            </div>
          </div>
          <div class="row mb-4">
            <div class="col-md-12 form-group">
              <%= form.label :descricao %>
              <%= form.text_area :descricao, size: "30x8", class: "form-control" %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 form-group">
              <%= form.submit "Enviar" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-md-5" data-aos="fade-up" data-aos-delay="200">
        <div class="row">
          <div class="col-md-10 ml-auto contact-info">
            <p><span class="d-block">Endereço:</span>
              <span>Corumbá de Goiás, Goiás</span></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>