<!-- Mostrar o Objetivo do Portal -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-12 col-lg-7 ml-auto order-lg-2 position-relative mb-5" data-aos="fade-up">
        <figure class="img-absolute">
          <% if foto_perfil_url(@produto.try(:produtor)) %>
            <%= image_tag(foto_perfil_url(@produto.try(:produtor)), class: "img-fluid mb-3") %>
          <% end %>
        </figure>
        <% if foto_capa_url(@produto) %>
          <%= image_tag(foto_capa_url(@produto), class: "img-fluid rounded") %>
        <% end %>
      </div>
      <div class="col-md-12 col-lg-4 order-lg-1" data-aos="fade-up">
        <%= t("home.mensagem_principal").html_safe %>
        <h6>
          <a href="https://www.youtube.com/watch?v=Uit7H-78XPI" data-fancybox class="btn btn-primary text-white py-2 mb-3"><%= t("home.produtos.plural") %></a>
          <span class="mb-3 font-family-serif"><em>&</em></span>
          <a href="https://www.youtube.com/watch?v=cen9ZMYzUm0" data-fancybox class="btn btn-primary text-white py-2 mb-3"><%= t("home.produtores.plural") %></a>
        </h6>
      </div>
    </div>
  </div>
</section>

<!-- Os Produtos -->
<section class="py-5 ">
  <div class="container">
    <div class="row justify-content-center text-center mb-5">
      <div class="col-md-7">
        <h2 class="heading" data-aos="fade-up"><%= t("home.produtos.plural") %></h2>
        <h6 data-aos="fade-up" data-aos-delay="100"><%= t("home.produtos.mensagem").html_safe %></h6>
      </div>
    </div>
    <div class="row">
      <% @produtos.each do |produto| %>
        <div class="col-md-12 col-lg-4 mb-5" data-aos="fade-up">
          <%= link_to(estado_cidade_produtor_produto_path(produto.produtor.cidade.estado, produto.produtor.cidade, produto.produtor, produto), class: "room") do %>
            <figure class="img-wrap">
              <%= image_tag(foto_capa_url(produto), class: "img-fluid mb-3") %>
            </figure>
            <div class="p-3 text-center room-info">
              <b><%= visitas_ao_produto(produto) %> <span class="ion-ios-eye"></span></b>
              <h2><%= produto.nome %></h2>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>

