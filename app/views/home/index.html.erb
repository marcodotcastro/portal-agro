<!-- Mostrar o Objetivo do Portal -->
<section class="py-5">
  <div class="container">
    <div class="row align-items-center">
     <div class="col-md-12 col-lg-7 ml-auto order-lg-2 position-relative mb-5" data-aos="fade-up">
        <figure class="img-absolute">
          <%= image_tag(@produto.produtor.foto_perfil_url, class: "img-fluid mb-3") %>
        </figure>
        <%= image_tag(@produto.foto_capa_url, class: "img-fluid rounded") %>
      </div>
      <div class="col-md-12 col-lg-4 order-lg-1" data-aos="fade-up">
        <h2 class="heading">Bem Vindo</h2>
        <p class="mb-4">Aqui você encontrará ....</p>
        <p>
          <a href="https://www.youtube.com/watch?v=Uit7H-78XPI"  data-fancybox class="btn btn-primary text-white py-2 mb-3">Os Produtos</a>
          <span class="mb-3 font-family-serif"><em>&</em></span>
          <a href="https://www.youtube.com/watch?v=cen9ZMYzUm0"  data-fancybox class="btn btn-primary text-white py-2 mb-3">Os Produtores</a>
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Os Produtos -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row justify-content-center text-center mb-5">
      <div class="col-md-7">
        <h2 class="heading" data-aos="fade-up">Produtos</h2>
        <p data-aos="fade-up" data-aos-delay="100">Os produtos ...</p>
      </div>
    </div>
    <div class="row">
      <% @produtos.each do |produto| %>
        <div class="col-md-6 col-lg-4 mb-5" data-aos="fade-up">
          <%= link_to(produto, class: "room") do %>
            <figure class="img-wrap">
                <%= image_tag(produto.foto_capa_url, class: "img-fluid mb-3", size: "500x500") %>
            </figure>
            <div class="p-3 text-center room-info">
              <h2><%= produto.nome %></h2>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>

