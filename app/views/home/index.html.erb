<!-- Mostrar o Objetivo do Portal -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-12 col-lg-7 ml-auto order-lg-2 position-relative mb-5" data-aos="fade-up">
        <figure class="img-absolute">
          <%= image_tag(@produto.produtor.foto_perfil_url, class: "img-fluid mb-3") %>
        </figure>
        <%= image_tag(@produto.foto_capa_url, class: "img-fluid rounded") %>
      </div>
      <div class="col-md-12 col-lg-4 order-lg-1" data-aos="fade-up">
        <h2 class="heading">Bem Vindo</h2>
        <h6 class="mb-4">Aqui você encontra os produtores rurais de sua cidade com seus produtos e serviços.</h6>
        <h6 class="mb-4">É possível também conhecer suas histórias e
          <b>se inspirar com vida desses verdadeiros guerreiros</b>.</h6>
        <h6>
          <a href="https://www.youtube.com/watch?v=Uit7H-78XPI" data-fancybox class="btn btn-primary text-white py-2 mb-3">Os
            Produtos</a>
          <span class="mb-3 font-family-serif"><em>&</em></span>
          <a href="https://www.youtube.com/watch?v=cen9ZMYzUm0" data-fancybox class="btn btn-primary text-white py-2 mb-3">Os
            Produtores</a>
        </h6>
      </div>
    </div>
  </div>
</section>

<!-- Os Produtos -->
<section class="py-5 ">
  <div class="container">
    <div class="row justify-content-center text-center mb-5">
      <div class="col-md-7">
        <h2 class="heading" data-aos="fade-up">Os Produtos</h2>
        <h6 data-aos="fade-up" data-aos-delay="100">Ao comprar os produtos, além de ter produtos com qualidade direto da
          roça, <b>você estará ajudando para que a história dessas famílias continuem</b>.</h6>
      </div>
    </div>
    <div class="row">
      <% @produtos.each do |produto| %>
        <div class="col-md-6 col-lg-4 mb-5" data-aos="fade-up">
          <%= link_to(estado_cidade_produtor_produto_path(produto.produtor.cidade.estado, produto.produtor.cidade, produto.produtor, produto), class: "room") do %>
            <figure class="img-wrap">
              <%= image_tag(produto.foto_capa_url, class: "img-fluid mb-3", size: "500x500") %>
            </figure>
            <div class="p-3 text-center room-info">
              <h2><%= produto.nome %></h2>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!--Os serviços-->
<section class="py-5 bg-light">
  <div class="container">
    <div class="row justify-content-center text-center mb-5">
      <div class="col-md-7">
        <h2 class="heading" data-aos="fade-up">Os Serviços</h2>
        <h6 data-aos="fade-up" data-aos-delay="100">Outros trabalhos do meio rural que é mais uma forma digna de se
          <b>alimentar sua família e manter sua história</b>.</h6>
        <% if @servicos.empty? %>
          <div class="row justify-content-center text-center">
            <h4 data-aos="fade-up">Nenhum serviço cadastrado</h4>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <% @servicos.each do |servico| %>
        <div class="col-md-6 col-lg-4 mb-5" data-aos="fade-up">
          <%= link_to(estado_cidade_produtor_servico_path(servico.produtor.cidade.estado, servico.produtor.cidade, servico.produtor, servico), class: "room") do %>
            <figure class="img-wrap">
              <%= image_tag(servico.foto_capa_url, class: "img-fluid mb-3", size: "500x500") %>
            </figure>
            <div class="p-3 text-center room-info">
              <h2><%= servico.nome %></h2>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Os Produtores -->
<section class="py-5">
  <div class="container">
    <div class="row justify-content-center text-center mb-5">
      <div class="col-md-7">
        <h2 class="heading" data-aos="fade-up">Os Produtores</h2>
        <h6 data-aos="fade-up">São os verdadeiros exemplos de luta, <b>conheçam suas histórias e se espelhem</b>.</h6>
      </div>
    </div>
    <div class="row">
      <% @produtores.each do |produtor| %>
        <div class="col-md-6 col-lg-4 mb-5" data-aos="fade-up">
          <%= link_to(estado_cidade_produtor_path(produtor.cidade.estado, produtor.cidade, produtor), class: "room") do %>
            <figure class="img-wrap">
              <%= image_tag(produtor.foto_perfil_url, class: "img-fluid mb-3", size: "500x500") %>
            </figure>
            <div class="p-3 text-center room-info">
              <h2><%= produtor.nome_completo %></h2>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>