<section class="py-5">
  <div class="container">
    <div class="row check-availabilty">
      <div class="block-32" data-aos="fade-up" data-aos-offset="-200">
        <%= search_form_for @q do |f| %>
          <div class='row'>
            <!--            <div class="col-md-4 col-lg-4">-->
            <!--              <label for="checkin_date" class="font-weight-bold text-black">Estado</label>-->
            <!--              <div class="field-icon-wrap">-->
            <!--                <input type="text" id='q_nome_cont' name='q[nome_cont]' class="form-control">-->
            <!--              </div>-->
            <!--            </div>-->
            <div class="col-md-4 col-lg-4">
              <label for="checkin_date" class="font-weight-bold text-black">Cidade</label>
              <div class="field-icon-wrap">
                <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                <%= f.select :cidade_id_eq, options_from_collection_for_select(Cidade.all, "id", "nome", @q.cidade_id_eq), {:include_blank => "Selecione"}, {:class => "form-control"} %>
              </div>
            </div>
            <div class="col-md-4 col-lg-4">
              <label for="checkin_date" class="font-weight-bold text-black">Nome</label>
              <div class="field-icon-wrap">
                <input type="text" id='q_nome_cont' name='q[nome_cont]' class="form-control">
              </div>
            </div>
          </div>
          <div class='row top-buffer'>
            <div class="col-md-6 col-lg-6">
              <%= f.button "Pesquisar", class: "btn btn-primary btn-block text-white" %>
            </div>
            <div class="col-md-6 col-lg-6">
              <%= link_to "Cancelar", request.path, class: "btn btn-primary btn-block text-white", style: "text-decoration: none" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section class="py-5">
  <div class="container">
    <div class="row">
      <% @produtores.each do |produtor| %>
        <div class="col-md-6 col-lg-4 mb-5" data-aos="fade-up">
          <%= link_to(estado_cidade_produtor_path(produtor.cidade.estado, produtor.cidade, produtor), class: "room") do %>
            <figure class="img-wrap">
              <%= image_tag(produtor.foto_perfil_url, class: "img-fluid mb-3", size: "500x500") %>
            </figure>
            <div class="p-3 text-center room-info">
              <h2><%= produtor.nome_completo %></h2>
              <h6>
                <b>Telefone:</b> <%= produtor.telefone %> <%= produtor.whatsapp ? "<span class='fa fa-whatsapp'></span>".html_safe : "" %>
              </h6>
              <h6><b>Email:</b> <%= produtor.email %></h6>
              <h6><b>Endereço:</b> <%= produtor.endereco_completo %></h6>
              <h6><b>Aceita Cartão?</b> <%= produtor.cartao ? "Sim".html_safe : "Não" %></h6>
              <h6><b>É Pessoa Jurídica?</b> <%= produtor.pessoa_juridica ? "Sim".html_safe : "Não" %></h6>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>

