<section class="py-5 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-lg-4 aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
        <div class="block-2">
          <div class="flipper">
            <div class="front" style="background-image: url(<%= @produtor.foto_principal_url %>);">
              <div class="box">
                <h2><%= @produtor.nome %></h2>
                <p><%= @produtor.apelido %></p>
              </div>
            </div>
            <div class="back">
               <div class="container">
                <br>
                <span class="letter-spacing-1">Telefone: </span><h5><%= @produtor.telefone %><%= @produtor.whatsapp ? " <span class='fa fa-whatsapp'></span>".html_safe : "" %></h5>
                <span class="letter-spacing-1">Email: </span><h5><%= @produtor.email %></h5>
                <span class="letter-spacing-1">Endereço: </span><h5><%= @produtor.endereco %></h5>
                <%= @produtor.cartao ? "<span class='letter-spacing-1'>Aceita Cartão</span><br>".html_safe : "" %>
                </div>
              <%= link_to @produtor do %>
                <div class="author d-flex">
                  <div class="image mr-3 align-self-center">
                    <img src="<%= @produtor.foto_principal_url %>" alt="">
                  </div>
                  <div class="name align-self-center"><%= @produtor.nome %> <span class="position"><%= @produtor.apelido %></span> <span  class="position"><a href="https://www.youtube.com/embed/<%= @produtor.video.codigo %>" data-fancybox >Vídeo Sobre o Produtor</a></span></div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6 mb-5">
        <h2 class="heading" data-aos="fade">A História</h2>
        <div class="row justify-content-center">
          <div class="col-md-12">
            <div class="timeline-item" date-is='2019' data-aos="fade">
              <h5>More Branches Worldwide</h3>
              <p>
                Far far away, behind the word mountains, far from the countries Vokalia and Consonantia.
              </p>
            </div>
            <div class="timeline-item" date-is='2011' data-aos="fade">
              <h5>Company Full Blast</h3>
              <p>
                Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.
              </p>
            </div>
            
            <div class="timeline-item" date-is='2008' data-aos="fade">
              <h5>The Birth of the Company</h3>
              <p>
                Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="py-5">
  <div class="container">
    <div class="row justify-content-center text-center mb-5">
      <div class="col-md-7">
        <h2 class="heading" data-aos="fade-up">As Fotos</h2>
        <p data-aos="fade-up" data-aos-delay="100">As fotos são para ...</p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="home-slider major-caousel owl-carousel mb-5" data-aos="fade-up" data-aos-delay="200">
          <% @produtor.fotos.each do |foto| %>
            <div class="slider-item">
              <a href="<%= foto.url %>" data-fancybox="images" data-caption="<%= foto.descricao %>"><img src="<%= foto.url %>" alt="<%= foto.nome %>" class="img-fluid"></a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
     <% unless@produtor.fotos %>
      <div class="row justify-content-center text-center">
        <h4 data-aos="fade-up">Nenhuma foto disponível</h4>
      </div>
    <% end %>
  </div>
</section>
<section class="py-5 bg-light">
  <div class="container">
    
    
    <div class="row justify-content-center text-center mb-5">
      <h2 class="heading" data-aos="fade-up">Os Produtos</h2>
    </div>
    <div class="row">
      <% @produtor.produtos.each do |produto| %>
        <div class="col-md-6 col-lg-4 mb-5" data-aos="fade-up">
          <%= link_to(produto, class: "room") do %>
            <figure class="img-wrap">
                <%= image_tag(produto.foto_principal_url, class: "img-fluid mb-3", size: "500x500") %>
            </figure>
            <div class="p-3 text-center room-info">
              <h2><%= produto.nome %></h2>
              <span class="letter-spacing-1">Categoria: <%= produto.categoria.nome %></span><br>
              <span class="letter-spacing-1">Qualidade: <%= produto.qualidade.nome %></span><br>
              <span class="letter-spacing-1">Produção: <%= produto.producao %></span><br>
              <span class="letter-spacing-1">Preço: <%= produto.preco %></span><br>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <% unless @produtor.produtos %>
        <div class="row justify-content-center text-center">
          <h4 data-aos="fade-up">Nenhum produto disponível</h4>
        </div>
    <% end %>
  </div>
</section>
