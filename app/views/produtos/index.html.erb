<h1 class="display-2">Produtos</h1>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>Produto</th>
      <th>Categoria</th>
      <th>Produtor</th>
      <th>Produção</th>
      <th>Preço</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.categoria.nome %></td>
        <td><%= link_to produto.produtor.nome, produto.produtor %></td>
        <td><%= produto.producao %></td>
        <td><%= produto.preco %></td>
        <td><%= link_to 'Ver', produto %></td>
      </tr>
    <% end %>
  </tbody>
</table>