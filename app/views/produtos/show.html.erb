<section class="py-5 bg-light">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-12 col-lg-7 ml-auto order-lg-2 position-relative mb-5" data-aos="fade-up">
        <figure class="img-absolute">
          <%= image_tag(@produto.produtor.foto_perfil_url, class: "img-fluid mb-3") %>
        </figure>
        <%= image_tag(@produto.foto_capa_url, class: "img-fluid rounded") %>
      </div>
      <div class="col-md-12 col-lg-4 order-lg-1" data-aos="fade-up">
        <h2 class="heading"><%= @produto.nome %></h2>
        <h6 class="mb-4"><%= @produto.descricao %></h6>
        <h6><b>Estado:</b> <%= @produto.produtor.cidade.estado.nome %></h6>
        <h6><b>Cidade:</b> <%= @produto.produtor.cidade.nome %></h6>
        <h6><b>Qualidade:</b> <%= @produto.qualidade.nome %></h6>
        <h6><b>Preço:</b> <%= @produto.preco_completo %></h6>
        <h6><b>Produção:</b> <%= @produto.producao %></h6>
      </div>
    </div>
  </div>
  <% if @produto.video %>
    <div class="row justify-content-center text-center mb-5" data-aos="fade-up">
      <p>
        <a href="https://www.youtube.com/embed/<%= @produto.video.codigo %>" data-fancybox class="btn btn-primary text-white py-2 mr-3 text-uppercase letter-spacing-1">Vídeo
          Sobre o Produto</a>
        <span class="mr-3 font-family-serif"></span>
      </p>
    </div>
  <% end %>
</section>

<section class="py-5">
  <div class="container">
    <div class="row justify-content-center text-center mb-5">
      <div class="col-md-7">
        <h2 class="heading" data-aos="fade-up">A Criação</h2>
        <h6 data-aos="fade-up" data-aos-delay="100">A criação é ...</h6>
        <% if @produto.criacoes.empty? %>
          <div class="row justify-content-center text-center">
            <h4 data-aos="fade-up"> Ainda não conhecemos a criação </h4>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-12 mb-5">
      <div class="row justify-content-center">
        <div class="col-md-12">
          <% @produto.criacoes.order(data: :asc).each do |criacao| %>
            <div class="timeline-item" date-is='<%= criacao.data.year %>' data-aos="fade">
              <h5><%= criacao.titulo %></h5>
              <h6><%= criacao.descricao %></h6>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="py-5 bg-light">
  <div class="container">
    <div class="row justify-content-center text-center mb-5">
      <div class="col-md-7">
        <h2 class="heading" data-aos="fade-up">Fotos</h2>
        <h6 data-aos="fade-up" data-aos-delay="100">As fotos são para ...</h6>
        <% if @produto.fotos.empty? %>
          <div class="row justify-content-center text-center">
            <h4 data-aos="fade-up">Nenhuma foto cadastrada</h4>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="home-slider major-caousel owl-carousel mb-5" data-aos="fade-up" data-aos-delay="200">
          <% @produto.fotos.each do |foto| %>
            <div class="slider-item">
              <a href="<%= url_for foto %>" data-fancybox="images"><img src="<%= url_for foto %>" class="img-fluid"></a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="py-5 ">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-md-7">
        <h2 class="heading" data-aos="fade-up">O Produtor</h2>
        <h6 data-aos="fade-up" data-aos-delay="100">O produtor ...</h6>
      </div>
    </div>
    <%= render 'produtores/produtor', produtor: @produto.produtor %>
  </div>
</section>