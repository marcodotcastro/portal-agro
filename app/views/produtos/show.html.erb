<section class="py-5 bg-light" id="next">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-12 col-lg-7 ml-auto order-lg-2 position-relative mb-5" data-aos="fade-up">
        <figure class="img-absolute">
          <%= image_tag(@produto.produtor.foto_principal_url, class: "img-fluid mb-3", size: "500x500") %>
        </figure>
        <%= image_tag(@produto.foto_principal_url, class: "img-fluid rounded", size: "500x500") %>
      
      </div>
      <div class="col-md-12 col-lg-4 order-lg-1" data-aos="fade-up">
        <h2 class="heading"><%= @produto.nome %></h2>
        <p><a href="https://www.youtube.com/embed/<%= @produto.video.codigo %>" data-fancybox class="btn btn-primary text-white py-2 mr-3 text-uppercase letter-spacing-1">Vídeo</a> <span class="mr-3 font-family-serif"></span></p>
        <p class="mb-4"><%= @produto.descricao %></p>
        <h5>Preço:</h5><%= @produto.preco %>
        <h5>Categoria:</h5><%= @produto.categoria.nome %>
        <h5>Qualidade:</h5><%= @produto.qualidade.nome %>
        <h5>Produção:</h5><%= @produto.producao %>
        <h5>Produtor:</h5><%= link_to @produto.produtor.nome, @produto.produtor %>
        
      </div>
    </div>
  </div>
</section>

<section class="section slider-section bg-light">
  <div class="container">
    <div class="row justify-content-center text-center mb-5">
      <div class="col-md-7">
        <h2 class="heading" data-aos="fade-up">Fotos</h2>
        <p data-aos="fade-up" data-aos-delay="100">As fotos são para ...</p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="home-slider major-caousel owl-carousel mb-5" data-aos="fade-up" data-aos-delay="200">
          <% @produto.fotos.each do |foto| %>
            <div class="slider-item">
              <a href="<%= foto.url %>" data-fancybox="images" data-caption="<%= foto.descricao %>"><img src="<%= foto.url %>" alt="<%= foto.nome %>" class="img-fluid"></a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>