<section class="py-5 bg-light">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-12 col-lg-7 ml-auto order-lg-2 position-relative mb-5" data-aos="fade-up">
        <figure class="img-absolute">
          <%= image_tag(foto_perfil_url(@servico.produtor), class: "img-fluid mb-3") %>
        </figure>
        <%= image_tag(foto_capa_url(@servico), class: "img-fluid rounded") %>
      </div>
      <div class="col-md-12 col-lg-4 order-lg-1" data-aos="fade-up">
        <h2 class="heading"><%= @servico.nome %></h2>
        <h6 class="mb-4"><%= @servico.descricao %></h6>
        <h6><b>Estado:</b> <%= @servico.produtor.cidade.estado.nome %></h6>
        <h6><b>Cidade:</b> <%= @servico.produtor.cidade.nome %></h6>
        <h6><b>Preço:</b> <%= servico_preco_completo(@servico) %></h6>
      </div>
    </div>
  </div>
</section>

<section class="py-5">
  <div class="container">
    <div class="row justify-content-center text-center mb-5">
      <div class="col-md-7">
        <h2 class="heading" data-aos="fade-up">Fotos</h2>
        <h6 data-aos="fade-up" data-aos-delay="100">Veja um pouco da qualidade e carinho que é prestado o serviço por
          famílias que vivem tão próximas da natureza.</h6>
        <% if @servico.fotos.empty? %>
          <div class="row justify-content-center text-center">
            <h4 data-aos="fade-up">Nenhuma foto cadastrada</h4>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="home-slider major-caousel owl-carousel mb-5" data-aos="fade-up" data-aos-delay="200">
          <% @servico.fotos.each do |foto| %>
            <div class="slider-item">
              <a href="<%= url_for foto %>" data-fancybox="images"><img src="<%= url_for foto %>" class="img-fluid"></a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="py-5 bg-light">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-md-7">
        <h2 class="heading" data-aos="fade-up">O Produtor</h2>
        <h6 data-aos="fade-up" data-aos-delay="100">É um verdadeiro exemplo de luta,
          <b>conheçam sua história e se espelhem</b>.</h6>
      </div>
    </div>
    <%= render 'produtores/produtor', produtor: @servico.produtor %>
  </div>
</section>